{# Переменные Mysql, зашифрованные base64 #}
---
apiVersion: "v1"
kind: "Secret"
metadata:
  name: "{{ mysql_deploy_cfg['secret'] }}"
  namespace: "{{ mysql_deploy_cfg['namespace'] }}"
type: "Opaque"
data:
  MYSQL_ROOT_PASSWORD: "{{ mysql_deploy_secrets['root_passwd'] }}"
  MYSQL_DATABASE: "{{ mysql_deploy_secrets['db'] }}"
  MYSQL_USER: "{{ mysql_deploy_secrets['user'] }}"
  MYSQL_PASSWORD: "{{ mysql_deploy_secrets['user_passwd'] }}"
