{# Деплой  Wordpress#}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ k8s_wordpress_cfg['name'] }}"
  namespace: "{{ k8s_wordpress_cfg['namespase'] }}"
spec:
  replicas: "{{ k8s_wordpress_cfg['replicas'] }}"
  selector:
    matchLabels:
      app: "{{ k8s_wordpress_cfg['name'] }}"
  template:
    metadata:
      labels:
        app: "{{ k8s_wordpress_cfg['name'] }}"
    spec:
      containers:
        - name: "{{ k8s_wordpress_container_config['name'] }}"
          image: "{{ k8s_wordpress_container_config['image'] }}":"{{ k8s_wordpress_container_config['tag'] }}"
          env:
            - name: WORDPRESS_DB_HOST
              value: "{{ k8s_wordpress_cfg['db_host'] }}"
            - name: "WORDPRESS_DB_NAME"
              valueFrom:
                secretKeyRef:
                  name: "{{ k8s_wordpress_cfg['secret_name'] }}"
                  key: "MYSQL_DATABASE"
            - name: "WORDPRESS_DB_USER"
              valueFrom:
                secretKeyRef:
                  name: "{{ k8s_wordpress_cfg['secret_name'] }}"
                  key: "MYSQL_USER"
            - name: "WORDPRESS_DB_PASSWORD"
              valueFrom:
                secretKeyRef:
                  name: "{{ k8s_wordpress_cfg['secret_name'] }}"
                  key: "MYSQL_PASSWORD"
          ports:
            - containerPort: "{{ k8s_wordpress_cfg['port'] }}"
          volumeMounts:
            - name: "{{ k8s_wordpress_cfg['storage_name'] }}"
              mountPath: /var/www/html  {# Монтируем директорию статики WordPress #}
      volumes:
        - name: "{{ k8s_wordpress_cfg['storage_name'] }}"
          hostPath:
            path: "{{ k8s_wordpress_hostdir }}"  # Путь на хосте
            type: DirectoryOrCreate      # Если директория не существует, она будет создана
